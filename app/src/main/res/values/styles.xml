<resources>

    <style name="Theme.Velociraptor" parent="Base.Theme.Velociraptor">
        <item name="toolbarShadow">@drawable/shadow_toolbar</item>
    </style>

    <style name="Base.Theme.Velociraptor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.Button.Colored" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/btn_colored_text_material</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Button.Colored.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/btn_colored_text_material</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="Widget.Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">'
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Button.Borderless.Colored" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/btn_colored_borderless_text_material</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
