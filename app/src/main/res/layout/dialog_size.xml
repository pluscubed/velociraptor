<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/size_limit_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <SeekBar
            android:id="@+id/seekbar_percent_limit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <EditText
            android:id="@+id/edittext_percent_limit"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:inputType="numberSigned" />

        <TextView
            android:id="@+id/text_percent_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="%" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/size_speedometer_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <SeekBar
            android:id="@+id/seekbar_percent_speedometer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100" />

        <EditText
            android:id="@+id/edittext_percent_speedometer"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:inputType="numberSigned" />

        <TextView
            android:id="@+id/text_percent_speedometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="%" />

    </LinearLayout>

</LinearLayout>
